    <style>
        /* The main container for the timeline */
        .timeline-wrapper {
            position: relative;
        }

        /* The vertical line running through the timeline */
        .timeline-line {
            position: absolute;
            top: 0;
            bottom: 0;
            width: 2px;
            background-color: #A41E34;
            /* On mobile, it's positioned to the left */
            left: 20px;
            z-index: 1;
        }

        /* The dot on the timeline */
        .timeline-dot {
            position: absolute;
            width: 16px;
            height: 16px;
            background-color: #A41E34;
            border-radius: 50%;
            z-index: 2;
            /* Mobile-first: Căn lề trái theo timeline-line */
            left: 20px;
            transform: translateX(-50%);
        }

        /* Your original styles - preserved for correctness */
        .timeline-date {
            color: #A41E34;
            font-weight: bold;
            font-size: 1.125rem; /* 18px */
        }

        .timeline-content {
            background-color: #FAF9F6;
            border-radius: 8px;
            padding: 20px;
            width: 100%; /* Full width within its parent column */
        }

        .timeline-title {
            color: #A41E34;
            font-weight: bold;
            font-size: 1.25rem; /* 20px */
            margin-bottom: 10px;
        }

        /* Mobile layout adjustments */
        .timeline-item-container {
            position: relative;
            padding-left: 50px; /* Space for the line and dot */
        }

        /* Desktop view (lg and up) */
        @@media (min-width: 1024px) {
            .timeline-line {
                left: 50%;
                transform: translateX(-50%);
            }

            .timeline-item-container {
                padding-left: 0; /* Reset mobile padding */
            }

            .timeline-dot {
                /* Đưa về giữa trên desktop */
                left: 50%;
            }
        }
    </style>
    <script>tailwind.config={theme:{extend:{colors:{primary:'#A41E34',secondary:'#FAF9F6'},borderRadius:{'none':'0px','sm':'4px',DEFAULT:'8px','md':'12px','lg':'16px','xl':'20px','2xl':'24px','3xl':'32px','full':'9999px','button':'8px'}}}}</script>
}

