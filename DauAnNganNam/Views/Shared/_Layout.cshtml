    <script>
        // Đợi cho đến khi toàn bộ nội dung trang được tải
        document.addEventListener('DOMContentLoaded', function () {

            // --- Xử lý Mobile Menu ---
            const menuButton = document.getElementById('mobile-menu-button');
            const mobileMenu = document.getElementById('mobile-menu');
            const menuIcon = menuButton.querySelector('i'); // Lấy thẻ icon bên trong button

            if (menuButton && mobileMenu) {
                menuButton.addEventListener('click', function () {
                    mobileMenu.classList.toggle('hidden');

                    // Thay đổi icon từ menu sang 'X' và ngược lại
                    if (mobileMenu.classList.contains('hidden')) {
                        menuIcon.classList.remove('ri-close-line');
                        menuIcon.classList.add('ri-menu-line');
                    } else {
                        menuIcon.classList.remove('ri-menu-line');
                        menuIcon.classList.add('ri-close-line');
                    }
                });
            }

            // --- Xử lý Sticky Navigation ---
            const nav = document.getElementById('main-nav');
            if (nav) {
                // Lấy vị trí ban đầu của thanh nav so với đầu trang
                const navTop = nav.offsetTop;

                window.addEventListener('scroll', function () {
                    // Nếu vị trí cuộn của cửa sổ lớn hơn vị trí ban đầu của nav
                    if (window.scrollY > navTop) {
                        // Thêm class để nav "dính" lại
                        nav.classList.add('sticky-nav');
                    } else {
                        // Xóa class để nav trở lại bình thường
                        nav.classList.remove('sticky-nav');
                    }
                });
            }

            // --- Xử lý Active Navigation ---
            const navLinks = document.querySelectorAll('.nav-link');
            let currentPath = window.location.pathname.toLowerCase();

            // Nếu là trang chủ (đường dẫn chỉ là "/"), thì coi nó là "/home" để khớp với link
            if (currentPath === '/') {
                currentPath = '/home';
            }

            navLinks.forEach(link => {
                const linkPath = link.getAttribute('href').toLowerCase();

                // So sánh xem đường dẫn hiện tại có bắt đầu bằng đường dẫn của link không
                if (linkPath !== '/' && currentPath.startsWith(linkPath)) {
                    link.classList.add('nav-active');
                }
            });

            // --- Xử lý Slider Product ---
            const bookCarouselElement = document.querySelector('.products-carousel');
            if (bookCarouselElement) {
                // Khởi tạo slider với jQuery
                const owl = $(".products-carousel");
                owl.owlCarousel({
                    loop: true,
                    margin: 20,
                    dots: true,
                    nav: false, 
                    autoplay: true,                      // Bật tự động chạy
                    autoplayTimeout: 4000,               // Chuyển slide sau mỗi 5 giây
                    responsive: {
                        0: { items: 1 },
                        768: { items: 2 },
                        1024: { items: 3 }
                    }
                });

                // Lắng nghe sự kiện click trên các nút tùy chỉnh của chúng ta
                const prevButton = document.getElementById('products-carousel-prev');
                const nextButton = document.getElementById('products-carousel-next');

                if (prevButton) {
                    prevButton.addEventListener('click', function() {
                        owl.trigger('prev.owl.carousel');
                    });
                }

                if (nextButton) {
                    nextButton.addEventListener('click', function() {
                        owl.trigger('next.owl.carousel');
                    });
                }

                // --- START: JAVASCRIPT CHO CỤM NÚT LIÊN HỆ MỚI ---
                const fabOpener = document.getElementById('fab-opener');
                const fabCloser = document.getElementById('fab-closer');
                const fabStack = document.getElementById('fab-stack');

                if (fabOpener && fabCloser && fabStack) {
                    // Khi bấm vào nút mở (icon tin nhắn)
                    fabOpener.addEventListener('click', function() {
                        fabOpener.classList.add('hidden');
                        fabStack.classList.remove('hidden');
                    });

                    // Khi bấm vào nút đóng (icon X)
                    fabCloser.addEventListener('click', function() {
                        fabStack.classList.add('hidden');
                        fabOpener.classList.remove('hidden');
                    });
                }
            }
        });
    </script>
