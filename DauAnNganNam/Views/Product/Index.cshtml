    <script>
        document.addEventListener("DOMContentLoaded", function () {
          // --- Animation Script ---
          const fadeElements = document.querySelectorAll(".fade-in");
          const observer = new IntersectionObserver(
            (entries) => {
              entries.forEach((entry) => {
                if (entry.isIntersecting) {
                  entry.target.classList.add("visible");
                }
              });
            },
            { threshold: 0.1 }
          );
          fadeElements.forEach((element) => observer.observe(element));

          // --- Navigation Script ---
          const dots = document.querySelectorAll(".dot");
          const sections = document.querySelectorAll(".product-section");

          const activateDot = (targetId) => {
            dots.forEach((dot) => {
                dot.classList.remove("active");
                if (dot.getAttribute("data-target") === targetId) {
                    dot.classList.add("active");
                }
            });
          };

          dots.forEach((dot) => {
            dot.addEventListener("click", () => {
              const targetId = dot.getAttribute("data-target");
              const targetSection = document.getElementById(targetId);
              if(targetSection) {
                 targetSection.scrollIntoView({ behavior: "smooth" });
              }
            });
          });

          const scrollObserver = new IntersectionObserver((entries) => {
              entries.forEach(entry => {
                  if (entry.isIntersecting) {
                      activateDot(entry.target.id);
                  }
              });
          }, { threshold: 0.5 });

          sections.forEach(section => scrollObserver.observe(section));
        });
                // Mở pop-up khi nhấp nút
        document.querySelectorAll('.open-popup').forEach(button => {
          button.addEventListener('click', function() {
            const popupId = this.getAttribute('data-popup');
            document.getElementById(popupId).classList.add('active');
          });
        });

                /// Đóng pop-up khi nhấp nút × hoặc bên ngoài
        document.querySelectorAll('.popup').forEach(popup => {

          // SỬA LỖI TẠI ĐÂY
          const closeButton = popup.querySelector('.close, .close-button');

          // Chỉ thêm sự kiện nếu tìm thấy nút đóng
          if (closeButton) {
            closeButton.addEventListener('click', () => {
              popup.classList.remove('active');
            });
          }

          // Đóng khi nhấp bên ngoài (giữ nguyên)
          popup.addEventListener('click', (event) => {
            if (event.target === popup) {
              popup.classList.remove('active');
            }
          });

          // Đóng khi nhấp bên ngoài
          popup.addEventListener('click', (event) => {
            if (event.target === popup) {
              popup.classList.remove('active');
            }
          });
        });
    </script>

