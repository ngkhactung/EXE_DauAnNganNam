@{
    ViewData["Title"] = "Dấu Ấn Ngàn Năm";
}    

<head>
    <title></title>
    <link href="https://fonts.googleapis.com/css2?family=Pacifico&family=Be+Vietnam+Pro:wght@400;500;600;700;800&display=swap"
          rel="stylesheet" />
    <script>
        tailwind.config = {
          theme: {
            extend: {
              colors: {
                primary: "#b52e31",
                secondary: "#f9e7e7",
              },
              borderRadius: {
                none: "0px",
                sm: "4px",
                DEFAULT: "8px",
                md: "12px",
                lg: "16px",
                xl: "20px",
                "2xl": "24px",
                "3xl": "32px",
                full: "9999px",
                button: "8px",
              },
              fontSize: {
                "custom": ["3.45rem", { lineHeight: "1.3" }],
              },
            },
          },
        };
    </script>
    <style>
        :where([class^="ri-"])::before {
            content: "\f3c2";
        }

        body {
            background-color: #fffcf8;
        }

        .pattern-bg {
            background-image: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%23b52e31' fill-opacity='0.05'%3E%3Cpath d='M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E");
        }

        .wave-pattern {
            /* background-image: url("data:image/svg+xml,%3Csvg width='100' height='20' viewBox='0 0 100 20' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M21.184 20c.357-.13.72-.264 1.088-.402l1.768-.661C33.64 15.347 39.647 14 50 14c10.271 0 15.362 1.222 24.629 4.928.955.383 1.869.74 2.75 1.072h6.225c-2.51-.73-5.139-1.691-8.233-2.928C65.888 13.278 60.562 12 50 12c-10.626 0-16.855 1.397-26.66 5.063l-1.767.662c-2.475.923-4.66 1.674-6.724 2.275h6.335zm0-20C13.258 2.892 8.077 4 0 4V2c5.744 0 9.951-.574 14.85-2h6.334zM77.38 0C85.239 2.966 90.502 4 100 4V2c-6.842 0-11.386-.542-16.396-2h-6.225zM0 14c8.44 0 13.718-1.21 22.272-4.402l1.768-.661C33.64 5.347 39.647 4 50 4c10.271 0 15.362 1.222 24.629 4.928C84.112 12.722 89.438 14 100 14v-2c-10.271 0-15.362-1.222-24.629-4.928C65.888 3.278 60.562 2 50 2 39.374 2 33.145 3.397 23.34 7.063l-1.767.662C13.223 10.84 8.163 12 0 12v2z' fill='%23b52e31' fill-opacity='0.05' fill-rule='evenodd'/%3E%3C/svg%3E"); */
            background-image: url("/images/backgrounds/bg_timeline_1.jpg");
            background-repeat: no-repeat; 
            background-size: cover;
            background-position: center;
        }

        .hero-section {
            background-color: #fff8ed;
        }

        .text-red {
            color: #a9312e
        }

        .text-black {
            color: black
        }

        .my-button {
            background: #a9312e;
            color: white;
            padding: 5px 33%;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: transform 0.3s ease-in-out; /* Smooth transition */
        }

            .my-button:hover {
                transform: scale(1.05); /* Enlarge by 5% */
                background: #fff8ed;
                color: #a9312e;
            }

        .image-container {
            width: 100%; /* Giả sử div gốc có độ rộng 100% của phần tử cha */
            height: 300px; /* Chiều cao cố định như div gốc */
            overflow: hidden; /* Đảm bảo hình ảnh không tràn ra ngoài */
        }

            .image-container img {
                width: 100%; /* Hình ảnh sẽ co giãn để vừa với chiều rộng của container */
                height: 100%; /* Hình ảnh sẽ co giãn để vừa với chiều cao của container */
                object-fit: cover; /* Đảm bảo hình ảnh lấp đầy container mà không bị méo, cắt các phần thừa nếu cần */
            }

        input:focus {
            outline: none;
        }

        .products-slider-container {
            position: relative;
        }

        .custom-nav-btn {
            position: absolute;
            top: 50%;
            transform: translateY(-50%);
            z-index: 10;
            background-color: rgba(169, 49, 46, 0.7);
            color: white;
            width: 40px;
            height: 40px;
            border-radius: 9999px;
            border: none;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 22px;
            transition: all 0.3s ease;
        }

            .custom-nav-btn:hover {
                background-color: rgba(169, 49, 46, 1);
                transform: translateY(-50%) scale(1.1);
            }

        #products-carousel-prev {
            left: -15px;
        }

        #products-carousel-next {
            right: -15px;
        }

        @@media (min-width: 768px) {
            .products-slider-container  {
                display: flex;
                align-items: center;
                gap: 1rem;
            }

            .products-slider-container .owl-carousel {
                flex-grow: 1;
                min-width: 0;
            }

            .custom-nav-btn {
                position: static;
                transform: none;
                width: 44px;
                height: 44px;
                font-size: 24px;
                background-color: #a9312e;
                flex-shrink: 0;
            }

                .custom-nav-btn:hover {
                    opacity: 0.8;
                    transform: scale(1.1);
                }

            #products-carousel-prev, #products-carousel-next {
                left: auto;
                right: auto;
            }

        }

        .products-carousel .owl-dots {
            margin-top: 2rem !important;
            text-align: center;
        }

            .products-carousel .owl-dots .owl-dot span {
                background: #d1d5db !important;
            }

            .products-carousel .owl-dots .owl-dot.active span {
                background: #a9312e !important;
            }
    </style>
</head>
<body>

    <!-- Hero Section -->
    <section class="hero-section py-16">
        <div class="container mx-auto px-4">
            <div class="w-full flex flex-col md:flex-row justify-content-center ">
                <div class="md:w-5/12 mb-8 md:mb-0">
                    <h3 class="text-black uppercase font-bold text-1.5xl md:text-3xl mb-4">
                        DẤU ẤN NGÀN NĂM
                    </h3>
                    <h1 class="text-4xl text-red md:text-5xl lg:text-custom font-extrabold text-gray-900 mb-6 tracking-tight">
                        Lịch Sử Không Ngủ Quên - Nó Vẫn Đập Trong Từng Thế Hệ
                    </h1>
                    <p class="text-gray-700 text-black text-lg md:text-xl mb-6">
                        Hãy cùng chúng mình trải nghiệm lịch sử thú vị!
                    </p>
                    <a href="/Product"
                       class="inline-block bg  text-white px-6 py-2 rounded-button hover:bg-gray-800 transition whitespace-nowrap">
                        Chi tiết <i class="ri-arrow-right-line ml-1"></i>
                    </a>
                </div>
                <div class="md:w-5/12 align-content-center">
                    <!-- Placeholder for hero image -->
                    <div class="bg-white rounded-lg shadow-lg overflow-hidden h-64 md:h-80">
                        <iframe class="w-full h-full"
                                src="https://www.youtube.com/embed/GQsHl_OiRhA?si=suEfC1g94_low9ym"
                                title="YouTube video player"
                                frameborder="0"
                                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture;"
                                referrerpolicy="strict-origin-when-cross-origin"
                                allowfullscreen></iframe>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Products Section -->
    <section class="py-16 bg-white">
        <div class="container mx-auto px-4">
            <div class="text-center mb-12">
                <p class="text-2xl font-medium mb-3">Sắp diễn ra</p>
                <h2 class="text-4xl md:text-5xl font-extrabold text-gray-900 tracking-tight text-red">
                    Kiệt Tác Sắp Trình Làng
                </h2>
            </div>

            <div class="products-slider-container">
                <!-- Nút Prev tùy chỉnh -->
                <button id="products-carousel-prev" class="custom-nav-btn">
                    <i class="ri-arrow-left-s-line"></i>
                </button>

                <!-- Owl Carousel slider -->
                <div class="owl-carousel owl-theme products-carousel">
                    <!-- Product 1 -->
                    <div class="item bg-white rounded-lg shadow-md overflow-hidden transition-transform hover:shadow-lg m-2">
                        <div class="image-container">
                            <img src="~/images/products/Rong_Thang_Long.png" alt="Rồng Thăng Long">
                        </div>
                        <div class="p-6">
                            <h3 class="text-xl font-bold text-gray-900 mb-2">Rồng Thăng Long</h3>
                            <div class="flex mb-2">
                                <i class="ri-star-fill text-yellow-400"></i><i class="ri-star-fill text-yellow-400"></i><i class="ri-star-fill text-yellow-400"></i><i class="ri-star-fill text-yellow-400"></i><i class="ri-star-fill text-yellow-400"></i>
                            </div>
                            <p class="text-gray-700 text-sm mb-3">Vua Lý Thái Tổ dời đô từ Hoa Lư đến Thăng Long (1010). <br/></p>
                            <a href="/Product" class="button-link"><button class="my-button">Khám phá ngay</button></a>
                        </div>
                    </div>
                    <!-- Product 2 -->
                    <div class="item bg-white rounded-lg shadow-md overflow-hidden transition-transform hover:shadow-lg m-2">
                        <div class="image-container">
                            <img src="~/images/products/Khai_Hoan.png" alt="Khải Hoàn">
                        </div>
                        <div class="p-6">
                            <h3 class="text-xl font-bold text-gray-900 mb-2">Khải Hoàn</h3>
                            <div class="flex mb-2">
                                <i class="ri-star-fill text-yellow-400"></i><i class="ri-star-fill text-yellow-400"></i><i class="ri-star-fill text-yellow-400"></i><i class="ri-star-fill text-yellow-400"></i><i class="ri-star-fill text-yellow-400"></i>
                            </div>
                            <p class="text-gray-700 text-sm mb-3">Trần Nhân Tông trở về hoàng thành sau khi đánh bại quân Nguyên Mông (1285).</p>
                            <a href="/Product" class="button-link"><button class="my-button">Khám phá ngay</button></a>
                        </div>
                    </div>
                    <!-- Product 3 -->
                    <div class="item bg-white rounded-lg shadow-md overflow-hidden transition-transform hover:shadow-lg m-2">
                        <div class="image-container">
                            <img src="~/images/products/Long_Thanh.png" alt="Long Thành">
                        </div>
                        <div class="p-6">
                            <h3 class="text-xl font-bold text-gray-900 mb-2">Long Thành</h3>
                            <div class="flex mb-2">
                                <i class="ri-star-fill text-yellow-400"></i><i class="ri-star-fill text-yellow-400"></i><i class="ri-star-fill text-yellow-400"></i><i class="ri-star-fill text-yellow-400"></i><i class="ri-star-fill text-yellow-400"></i>
                            </div>
                            <p class="text-gray-700 text-sm mb-3">Lê Lợi lên ngôi tại Thăng Long sau kháng chiến chống Minh.</p>
                            <a href="/Product" class="button-link"><button class="my-button">Khám phá ngay</button></a>
                        </div>
                    </div>
                    <!-- Product 4 -->
                    <div class="item bg-white rounded-lg shadow-md overflow-hidden transition-transform hover:shadow-lg m-2">
                        <div class="image-container">
                            <img src="~/images/products/Quyen_Luc.png" alt="Quyền Lực">
                        </div>
                        <div class="p-6">
                            <h3 class="text-xl font-bold text-gray-900 mb-2">Quyền Lực</h3>
                            <div class="flex mb-2">
                                <i class="ri-star-fill text-yellow-400"></i><i class="ri-star-fill text-yellow-400"></i><i class="ri-star-fill text-yellow-400"></i><i class="ri-star-fill text-yellow-400"></i><i class="ri-star-fill text-gray-300"></i>
                            </div>
                            <p class="text-gray-700 text-sm mb-3">Tinh thần bất khuất của nhà Trần trong ba lần kháng chiến.</p>
                            <a href="/Product" class="button-link"><button class="my-button">Khám phá ngay</button></a>
                        </div>
                    </div>
                </div>

                <!-- Nút Next tùy chỉnh -->
                <button id="products-carousel-next" class="custom-nav-btn">
                    <i class="ri-arrow-right-s-line"></i>
                </button>
            </div>
        </div>
    </section>

    <!-- Memorable Moments Section -->
    <section class="py-16 pattern-bg px-lg-5 px-3">
        <div class="container mx-auto px-4">
            <div class="text-center mb-12">
                <h2 class="text-4xl md:text-5xl font-extrabold text-red tracking-tight">
                    Khoảnh khắc đáng nhớ
