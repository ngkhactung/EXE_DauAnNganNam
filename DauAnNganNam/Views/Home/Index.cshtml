                <div class="mb-6 break-inside-avoid">
                    <div class="rounded-lg shadow-md overflow-hidden bg-white">
                        <img src="~/images/collection/collection-m-1-1.jpg" alt="Khoảnh khắc đáng nhớ 1" class="w-full h-auto">
                    </div>
                </div>
                <div class="mb-6 break-inside-avoid">
                    <div class="rounded-lg shadow-md overflow-hidden bg-white">
                        <img src="~/images/collection/collection-m-1-2.jpg" alt="Khoảnh khắc đáng nhớ 2" class="w-full h-auto">
                    </div>
                </div>
                <div class="mb-6 break-inside-avoid">
                    <div class="rounded-lg shadow-md overflow-hidden bg-white">
