    <script id="main-script">
        document.addEventListener("DOMContentLoaded", function () {
            // --- TAB SWITCHING LOGIC ---
            const tabLinks = document.querySelectorAll(".tab-link");
            const tabContents = document.querySelectorAll(".tab-content");

            tabLinks.forEach(link => {
                link.addEventListener("click", function (e) {
                    e.preventDefault();
                    const tabId = this.dataset.tab;

                    // Update active styles for links
                    tabLinks.forEach(item => {
                        item.classList.remove("border-primary", "burgundy-text");
                        item.classList.add("border-transparent");
                    });
                    this.classList.add("border-primary", "burgundy-text");
                    this.classList.remove("border-transparent");

                    // Show/hide content panes
                    tabContents.forEach(content => {
                        if (content.dataset.content === tabId) {
                            content.classList.remove("hidden");
                        } else {
                            content.classList.add("hidden");
                        }
                    });
                });
            });

            // --- POPUP HANDLING LOGIC ---
            const readMoreButtons = document.querySelectorAll(".read-more-btn");
            const closePopupButtons = document.querySelectorAll(".close-popup-btn");
            const popupOverlays = document.querySelectorAll(".popup-overlay");

            // Open popup
            readMoreButtons.forEach(button => {
                button.addEventListener("click", function () {
                    const popupId = this.dataset.popup;
                    const popup = document.getElementById(popupId);
                    if (popup) {
                        popup.classList.remove("hidden");
                    }
                });
            });

            // Close popup with the 'X' button
            closePopupButtons.forEach(button => {
                button.addEventListener("click", function () {
                    // Find the closest parent popup and hide it
                    this.closest(".popup-overlay").classList.add("hidden");
                });
            });

            // Close popup by clicking on the overlay background
            popupOverlays.forEach(popup => {
                popup.addEventListener("click", function (event) {
                    // If the clicked element is the overlay itself (not its children)
                    if (event.target === this) {
                        this.classList.add("hidden");
                    }
                });
            });
        });
    </script>

